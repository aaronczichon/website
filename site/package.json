{
	"name": "aaronczichon.de",
	"type": "module",
	"version": "1.0.1",
	"description": "Personal website of Aaron Czichon",
	"scripts": {
		"dev": "astro dev --host 127.0.0.1",
		"start": "npm run rm:styles && npm run copy:styles && npm run dev",
		"build": "npm run copy:styles && astro check && astro build",
		"preview": "astro preview",
		"astro": "astro",
		"prettier": "prettier --config ./.prettierrc.mjs --write \"**{.ts,.mdx,.css,.md,.html,.astro}\"",
		"copy:styles": "cp -R ../design/src/styles ./src/styles",
		"rm:styles": "rm -rf ./src/styles",
		"copy:assets": "cp -R ../design/src/assets ./public/assets"
	},
	"dependencies": {
		"@astrojs/check": "^0.9.4",
		"@astrojs/mdx": "^4.0.1",
		"@astrojs/preact": "^4.0.0",
		"@astrojs/rss": "^4.0.10",
		"astro": "^5.0.3",
		"gpxparser": "^3.0.8",
		"mapbox-gl": "^3.2.0",
		"markdown-it": "^14.1.0",
		"preact": "^10.19.7",
		"sanitize-html": "^2.13.0",
		"typescript": "^5.3.3"
	},
	"devDependencies": {
		"@types/mapbox-gl": "^3.1.0",
		"@types/markdown-it": "^14.1.1",
		"prettier": "^3.2.5",
		"prettier-plugin-astro": "^0.13.0"
	}
}
