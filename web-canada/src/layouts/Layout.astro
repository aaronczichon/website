---
interface Props {
	title: string;
}

const { title } = Astro.props;

import '../styles/index.css';
import '../styles/fonts/mona-sans.css';

import MenuIcon from '../components/MenuIcon.astro';

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Personal website of Aaron Czichon" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/assets/icons/canada_flag.svg" />
		<link
			rel="preload"
			href="/assets/fonts/Mona-Sans.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>
		<title>{title}</title>
	</head>
	<body>
		<div class="container topnav" id="myTopnav">
			<a href="/" class={currentPath === "" ? "active" : ""}>
				<img src="/assets/images/profile.jpg" alt="Aaron Czichon" class="img-profile" />
			</a>
			<!-- <a href="#contact">Canada</a> -->
			<a href="/blog/" class={currentPath.indexOf('blog') > -1 ? "active" : ""}>Blog</a>
			<!-- <a href="map.html">Map</a> -->
			<!-- <a href="images.html">Images</a> -->
			<a href="#about">About</a>
			<a href="javascript:void(0);" class="icon" onclick="toggleNav()">
				<MenuIcon />
			</a>
		</div>
		<slot />
		<script is:inline>
			function toggleNav() {
				var x = document.getElementById('myTopnav');
				if (x.className === 'topnav') {
					x.className += ' responsive';
				} else {
					x.className = 'topnav';
				}
			}
		</script>
	</body>
</html>