---
import { Image } from "astro:assets";
const { url, alt, image } = Astro.props;
---
<div class="hero">
  {
    image ? 
    <Image
      src={image}
      alt={alt}
      style="height: 100%; width: 100%; object-fit: cover;"
    />
    :
    <img 
      src={url} alt={alt} 
      decoding="async"
      loading="lazy"/>
  }
</div>