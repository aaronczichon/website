---

import MenuIcon from './MenuIcon.astro';

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---
		<div class="container topnav" id="myTopnav">
			<a href="/" class={currentPath === "" ? "active" : ""}>
				<img src="/images/main.jpg" alt="Aaron Czichon & Lea Gräß" class="img-profile" />
			</a>
			<!-- <a href="#contact">Canada</a> -->
			<a href="/blog/" class={currentPath.indexOf('blog') > -1 ? "active" : ""}>Blog</a>
			<a href="/pengiun">Find Pengiuns</a>
			<!-- <a href="map.html">Map</a> -->
			<!-- <a href="images.html">Images</a> -->
			<a href={"/about/"}>Über uns</a>
			<a href="javascript:void(0);" class="icon" onclick="toggleNav()">
				<MenuIcon />
			</a>
		</div>
		<script is:inline>
			function toggleNav() {
				var x = document.getElementById('myTopnav');
				if (x.className === 'topnav') {
					x.className += ' responsive';
				} else {
					x.className = 'topnav';
				}
			}
		</script>