---
interface Props {
  title: string;
}

const { title } = Astro.props;

import "../styles/index.css";
import "../styles/fonts/mona-sans.css";

import Nav from "../components/Nav.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Personal website of Aaron Czichon, Software & Web Engineer"
    />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/jpg"
      href="/assets/icons/refresh_squared.jpg"
    />
    <link
      rel="preload"
      href="/assets/fonts/Mona-Sans.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Aaron Czichon Blog - RSS Feed"
      href={`${Astro.site}rss.xml`}
    />
    <title>{title}</title>
  </head>
  <body>
    <Nav />
    <slot />
    <script is:inline>
      var _paq = (window._paq = window._paq || []);
      _paq.push(["trackPageView"]);
      _paq.push(["enableLinkTracking"]);
      (function () {
        var u = "//analytics.aaronczichon.de/";
        _paq.push(["setTrackerUrl", u + "matomo.php"]);
        _paq.push(["setSiteId", "1"]);
        var d = document,
          g = d.createElement("script"),
          s = d.getElementsByTagName("script")[0];
        g.async = true;
        g.src = u + "matomo.js";
        s.parentNode.insertBefore(g, s);
      })();
    </script>
  </body>
</html>
