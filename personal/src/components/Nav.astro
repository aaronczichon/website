---
import MenuIcon from "./MenuIcon.astro";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
import mainImage from "../resources/refresh_squared.jpg";
import { Image } from "astro:assets";
---

<div class="container">
  <nav class="container topnav" id="myTopnav">
    <a href="/" class={currentPath === "" ? "active" : ""}>
      <Image
        src={mainImage}
        alt="Aaron Czichon"
        class="img-profile"
        widths={[30]}
        sizes={`30px`}
      />
    </a>
    <a href="/blog/" class={currentPath.indexOf("blog") > -1 ? "active" : ""}
      >Blog</a
    >
    <a href="/cv/" class={currentPath.indexOf("cv") > -1 ? "active" : ""}>CV</a>
    <a
      href="/images/"
      class={currentPath.indexOf("images") > -1 ? "active" : ""}>Images</a
    >
    <a href="/imprint">Imprint</a>
    <a
      href="javascript:void(0);"
      rel="nofollow"
      class="icon"
      onclick="toggleNav()"
    >
      <MenuIcon />
    </a>
  </nav>
</div>
<script is:inline>
  function toggleNav() {
    var x = document.getElementById("myTopnav");
    if (x.className === "container topnav") {
      x.className += " responsive";
    } else {
      x.className = "container topnav";
    }
  }
</script>
